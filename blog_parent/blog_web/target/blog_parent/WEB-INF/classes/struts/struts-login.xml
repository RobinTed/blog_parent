<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
	<struts>
		<package name="login" extends="struts-default" namespace="/login">
			<action name="login_*" class="loginAction" method="{1}">
				<result name="registerPage">/WEB-INF/jsp/login/register.jsp</result>
				<result name="loginPage">/WEB-INF/jsp/login/login.jsp</result>
				<result name="mailInfo">/WEB-INF/jsp/login/mailInfo.jsp</result>
				<result name="failure">/WEB-INF/jsp/login/failure.jsp</result>
				<result name="choose">/WEB-INF/jsp/login/choose.jsp</result>
				<result name="mainPage">/WEB-INF/jsp/user/mainPage.jsp</result>
			</action>
		</package>
	</struts>